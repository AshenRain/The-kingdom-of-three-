    /// START
    void Start(Info Base){
        for (int i = 0; i<55; i++){
             Base.fields.add(Fabric_Field.createField());
             Base.fields.get(i).coordinate = Base.fieldsCoordinates[i];
             if (Base.fields.get(i).coordinate == 4114 or Base.fields.get(i).coordinate == 4411 or Base.fields.get(i).coordinate == 4444){
                Base.fields.get(i).type = 3; // Это Рудник
             }
             if else (Base.fields.get(i).coordinate == 1111 or
                      Base.fields.get(i).coordinate == 1221 or
                      Base.fields.get(i).coordinate == 1331 or
                      Base.fields.get(i).coordinate == 1441 or
                      
                      Base.fields.get(i).coordinate == 2134 or
